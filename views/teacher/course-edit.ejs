<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const frmCourse = document.getElementById('frmCourse');
    const nameCourse = document.getElementById('txtNameCourse');
    const title = document.getElementById('txtTitle');
    const SaleCost = document.getElementById('txtPrice');
    const Description=document.getElementById('txtDescription');

    frmCourse.addEventListener('submit', function(e) {
      e.preventDefault();

      const nameCourseValue = nameCourse.value;
      const titleValue = title.value;
      const SaleCostValue = SaleCost.value;
      const DescriptionValue=Description.value;

      if (nameCourseValue.length === 0 || titleValue.length === 0 || DescriptionValue.length ===0) {
        Swal.fire({
          icon: 'error',
          text: 'Empty data.',
        });
        return;
      }

      if (SaleCostValue <= 0 || SaleCostValue > 10000) {
        Swal.fire({
          icon: 'error',
          text: 'The amount is too large. Please re-write.',
        });
        return;
      }

      frmCourse.submit();
    });
  });
</script>



