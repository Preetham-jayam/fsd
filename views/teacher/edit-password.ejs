<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Teacher Home Page</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="/admindb.css" />
    <style>
      img {
        border-radius: 50%;
        align-self: center;
      }
      p {
        align-self: center;
        font-size: larger;
      }
      .col-8 {
        display: flex;
      }
      button {
        align-items: center;
        align-self: center;
      }
      textarea ~ label {
        top: 20px;
        font-size: 18px;
        font-weight: 300;
      }
    </style>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-dark"
      id="navbar"
      style="background-color: #06bbcc"
    >
      <a class="navbar-brand" href="/">
        <i class="fa fa-home fa-lg"></i>
      </a>
      <a class="navbar-brand" href="/teacher">Eduphoria</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto"></ul>

        <ul class="navbar-nav ml-auto">
          <ul class="navbar-nav mr-sm-2"></ul>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <i class="fa fa-user" aria-hidden="true"></i>
              Welcome, <b>Dr.<%=teacher.FullName%></b>!
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/teacher/profile">
                <i class="fa fa-user" aria-hidden="true"></i>
                Profile
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/logout">
                <i class="fa fa-sign-out" aria-hidden="true"></i>
                Sign Out
              </a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-4">
          <div class="container-fluid mt-4">
            <div class="row">
              <div class="card mb-3">
                <ul class="list-group list-group-flush">
                  <img
                    src="/Img/instructor/2.jpg"
                    alt="Avatar"
                    style="width: 200px"
                  />
                  <p>Dr.<%=teacher.FullName%></p>
                  <a
                    class="list-group-item list-group-item-action"
                    href="/teacher/profile"
                    >Profile</a
                  >
                  <a
                    class="list-group-item list-group-item-action active"
                    href="/teacher/edit-password"
                    >Account</a
                  >
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-8">
          <form
            method="POST"
            action="/teacher/edit-password"
            id="frmChangePassword"
          >
            <div class="container-fluid mt-4">
              <input type="hidden" value="<%=user._id%>" name="userId" />
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="currentpwd"
                  placeholder="Enter Current Password"
                  name="CurrentPassword"
                />
                <label for="floatingInput">Enter Current Password</label>
                <i
                  class="far fa-eye position-absolute top-50 end-0 translate-middle-y cursor-pointer"
                  onclick="togglePasswordVisibility('currentpwd')"
                ></i>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="pwd"
                  placeholder="Enter New Password"
                  name="NewPassword"
                />
                <label for="floatingInput">Enter New Password</label>
                <i
                  class="far fa-eye position-absolute top-50 end-0 translate-middle-y cursor-pointer"
                  onclick="togglePasswordVisibility('pwd')"
                ></i>
              </div>
              <div class="form-floating mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="confirmpwd"
                  placeholder="Re-type New Password"
                  name="RetypeNewPassword"
                />
                <label for="floatingInput">Re-type New Password</label>
                <i
                  class="far fa-eye position-absolute top-50 end-0 translate-middle-y cursor-pointer"
                  onclick="togglePasswordVisibility('confirmpwd')"
                ></i>
              </div>
              <button type="submit" class="btn btn-danger">
                Change Password
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>

  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha256-jXCJJT3KKcnNjZ3rfsabCj1EX4j2omR4xxm+H5CtywE="
    crossorigin="anonymous"
  ></script>
  <script src="/js/bootnavbar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script>
    $("#frmChangePassword").on("submit", function (e) {
      e.preventDefault();
      const old = $("#currentpwd").val();
      if (old.length == 0) {
        Swal.fire({
          icon: "error",
          text: "Current Password is empty",
        });
        return;
      }
      const newpwd = $("#pwd").val();
      if (newpwd.length == 0) {
        Swal.fire({
          icon: "error",
          text: "Password is empty",
        });
        return;
      }
      const retypepwd = $("#confirmpwd").val();
      if (retypepwd.length == 0) {
        Swal.fire({
          icon: "error",
          text: "RePassword is empty",
        });
        return;
      }
      if (newpwd !== retypepwd) {
        Swal.fire({
          icon: "error",
          text: "Password Not matching",
        });
        return;
      }
      $("#frmChangePassword").off("submit").submit();
    });
  </script>
  <script>
    function togglePasswordVisibility(passwordId) {
      const passwordInput = document.getElementById(passwordId);
      const passwordIcon = passwordInput.nextElementSibling;
      if (passwordInput.type === "password") {
        passwordInput.type = "text";
        passwordIcon.classList.remove("far", "fa-eye");
        passwordIcon.classList.add("far", "fa-eye-slash");
      } else {
        passwordInput.type = "password";
        passwordIcon.classList.remove("far", "fa-eye-slash");
        passwordIcon.classList.add("far", "fa-eye");
      }
    }
  </script>
</html>
