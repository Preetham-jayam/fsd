<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>


<script>
  document.addEventListener('DOMContentLoaded', function() {
    const frmCourse = document.getElementById('frmCourse');
    const nameCourse = document.getElementById('txtNameCourse');
    const title = document.getElementById('txtTitle');
    const Price = document.getElementById('txtPrice');

    frmCourse.addEventListener('submit', function(e) {
      e.preventDefault();

      const nameCourseValue = nameCourse.value;
      const titleValue = title.value;
      const PriceValue = Price.value;

      if (nameCourseValue.length === 0 || titleValue.length === 0 || PriceValue.length === 0) {
        Swal.fire({
          icon: 'error',
          text: 'Empty data.',
        });
        return;
      }

      if (isNaN(PriceValue)) {
        Swal.fire({
          icon: 'error',
          text: 'Not a number at Price data.',
        });
        return;
      }

      if (PriceValue <= 0 || PriceValue > 9999) {
        Swal.fire({
          icon: 'error',
          text: 'The amount is too large. Please re-write.',
        });
        return;
      }

      frmCourse.submit();
    });
  });
</script>

