    <div class="book-loader"></div>
</div>



<%-include('partials/footer.ejs');%>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
      const frmRegister = document.getElementById('frmRegister');
      const name = document.getElementById('name');
      const message = document.getElementById('message');
      const desc = document.getElementById('Describe');
      const email = document.getElementById('email');
  
      frmRegister.addEventListener('submit', function(e) {
        e.preventDefault();
  
        const nameValue = name.value;
        const messageValue = message.value;
        const descValue = desc.value;
        const emailValue = email.value;
  
        if (nameValue.length === 0) {
          Swal.fire({
            icon: 'error',
            text: 'Invalid name data',
          });
          return;
        }
  
        if (messageValue.length === 0) {
          Swal.fire({
            icon: 'error',
            text: 'Invalid message data',
          });
          return;
        }
  
        if (descValue.length === 0) {
          Swal.fire({
            icon: 'error',
            text: 'Invalid Describe data',
          });
          return;
        }
  
        if (emailValue.length === 0) {
          Swal.fire({
            icon: 'error',
            text: 'Invalid email data',
          });
          return;
        }
  
        if (!/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/.test(emailValue)) {
          Swal.fire({
            icon: 'error',
            text: 'Invalid email data',
          });
          return;
        }
  
        frmRegister.submit();
      });
    });
  </script>
  