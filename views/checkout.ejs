<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Eduphoria</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="Img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="stylesheet" href="../bootstrap.min.css" />
  

    <style>
                        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap');

                *{
                font-family: 'Poppins', sans-serif;
                margin:0; padding:0;
                box-sizing: border-box;
                outline: none; border:none;
                text-transform: capitalize;
                transition: all .2s linear;
                }

                .checkout{
                display: flex;
                justify-content: center;
                align-items: center;
                padding:25px;
                min-height: 100vh;
                background: linear-gradient(90deg, #ffffff  60%, #ffffff 40.1%);
                }

                .checkout form{
                padding:20px;
                width:700px;
                background: #06bbcc;
                box-shadow: 0 5px 10px rgba(0,0,0,.1);
                }

                .checkout form .row{
                display: flex;
                flex-wrap: wrap;
                gap:15px;
                }

                .checkout form .row .col{
                flex:1 1 250px;
                }

                .checkout form .row .col .title{
                font-size: 20px;
                color:#333;
                padding-bottom: 5px;
                text-transform: uppercase;
                }

                .checkout form .row .col .inputBox{
                margin:15px 0;
                }

                .checkout form .row .col .inputBox span{
                margin-bottom: 10px;
                display: block;
                }

                .checkout form .row .col .inputBox input{
                width: 100%;
                border:1px solid #ccc;
                padding:10px 15px;
                font-size: 15px;
                text-transform: none;
                }

                .checkout form .row .col .inputBox input:focus{
                border:1px solid #000;
                }

                .checkout form .row .col .flex{
                display: flex;
                gap:15px;
                }

                .checkout form .row .col .flex .inputBox{
                margin-top: 5px;
                }

                .checkout form .row .col .inputBox img{
                height: 34px;
                margin-top: 5px;
                filter: drop-shadow(0 0 1px #000);
                }

                .checkout form .submit-btn{
                width: 100%;
                padding:12px;
                font-size: 17px;
                background: #27ae60;
                color:#fff;
                margin-top: 5px;
                cursor: pointer;
                }

                .checkout form .submit-btn:hover{
                background: #cd1925;
                }

                .checkout form inputBox span {
                    text-transform: capitalize;
                }

                .checkout form inputBox :placeholder-shown{
                    text-transform: capitalize;
                }


            
    </style>
      

      <link href="../styles.css" rel="stylesheet" />
  </head>
  <body>
    <%-include('partials/navbar.ejs');%>

    <div class="container checkout">
      <form action="/courseContent" id="frmCheckout">
        <div class="row">
          <div class="col">
            <h3 class="title">billing address</h3>

            <div class="inputBox">
              <span>full name :</span>
              <input type="text" id="name" placeholder="Manjith" />
            </div>
            <div class="inputBox">
              <span>email :</span>
              <input type="email" id="emailId" placeholder="Manjith@gmail.com" />
            </div>
            <div class="inputBox">
              <span>address :</span>
              <input type="text" id="address" placeholder="room - street - locality" />
            </div>
            <div class="inputBox">
              <span>city :</span>
              <input type="text" id="city" placeholder="Anantapur" />
            </div>

            <div class="flex">
              <div class="inputBox">
                <span>state :</span>
                <input type="text" id="state" placeholder="Andhra Pradesh" />
              </div>
              <div class="inputBox">
                <span>zip code :</span>
                <input type="text" id="zip" placeholder="515761" />
              </div>
            </div>
          </div>

          <div class="col">
            <h3 class="title">payment</h3>

            <div class="inputBox">
              <span>cards accepted :</span>
              <img src="Img/card_img.png" alt="Cards Page" />
            </div>
            <div class="inputBox">
              <span>name on card :</span>
              <input type="text" placeholder="Manjith" />
            </div>
            <div class="inputBox">
              <span>credit card number :</span>
              <input type="number" id="cardno" placeholder="1234-5678-1234-5678" />
            </div>
            <div class="inputBox">
              <span>exp month :</span>
              <input type="text" placeholder="January" />
            </div>

            <div class="flex">
              <div class="inputBox">
                <span>exp year :</span>
                <input type="number" placeholder="2024" />
              </div>
              <div class="inputBox">
                <span>CVV :</span>
                <input type="text" id="cvv" placeholder="1234" />
              </div>
            </div>
          </div>
        </div>

        <input type="submit" value="proceed to checkout" class="submit-btn" />
      </form>
    </div>

    <%-include('partials/footer.ejs');%>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    const mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
    $('#frmCheckout').on('submit',function(e){
          e.preventDefault();
          const name=$('#name').val();
          if(name.length==0){
            Swal.fire({
              icon:'error',
              text:'Invalid name data',
            })
              return;
          }
          

            const cvv=$('#cvv').val();
          let regph=/^[0-9]+$/;

          if(cvv.length==0 ){
             Swal.fire({
              icon:'error',
              text:'Cvv Number is Empty ',
             })
             return;
          }
          if( !regph.test(cvv)){
             Swal.fire({
              icon:'error',
              text:'cvv must be in numbers ',
             })
             return;
          }


          if(cvv.length!=4 || !regph.test(cvv)){
             Swal.fire({
              icon:'error',
              text:'cvv Number must be 4 numbers ',
             })
             return;
          }


            const email = $('#emailId').val();
            if (email.length == 0) {
              Swal.fire({
                icon: 'error',
                text: 'Invalid email data.',
              })
              return;
            }

            if (!mailformat.test(email)) {
                Swal.fire({
                  icon: 'error',
                  text: 'Invalid email data.',
                })
                return;
              }
              $('#frmCheckout').off('submit').submit();
             
    });
</script>


</html>
 
