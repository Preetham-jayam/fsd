<%-include("../partials/adminheader.ejs");%>
<h1 class="display-3 text-center" style="font-size: 3rem;">Course Details</h1>
    <div class="row col-md-12 justify-content-center btn-add">
       
        <div class="col-md-1 carousel-title "> </div>
        <div class="col-md-10 carousel-title btn-add">
          <div>
            <hr />
          </div>
          <div class="col-md-1"></div>
        </div>
      </div>
      
      <div class="container">
        <div class="row">
          <% for(var i=0;i < courses.length ;i++){%>
          <div class="col-lg-4 col-md-6 col-sm-12 course-card mb-4">
            <div class="card box-shadow card-actions">
              <img class="card-img-top card-image" src="/<%=courses[i].Imageurl%>" alt="Course Image">
              <div class="card-body card-content">
                <h5 class="card-title">Title:<%=courses[i].title%></h5>
                <h5 class="card-teacher">Course Name:<%=courses[i].name%></h5>
                <h5 class="card-teacher">Teacher:<%=courses[i].teacher.FullName%></h5>
                <h5 class="card-price">Course Price:â‚¹<%=courses[i].price%></h5>
      
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a href="/admin/detail/course/<%=courses[i]._id%>" class="btn btn-sm btn-outline-warning card-button">View Details</a>
                    <a href="/admin/course/delete/<%=courses[i]._id%>" class="btn btn-sm  btn-outline-danger card-button">Delete</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% if ((i+1) % 3 == 0) { %>
            <div class="w-100"></div>
          <% } %>
          <%}%>
        </div>
      </div>
      
      
<%-include('../partials/adminfooter.ejs');%>

