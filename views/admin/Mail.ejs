<%-include("../partials/adminheader.ejs");%>

<div class="container">
  <% if (messages.success) { %>
    <div class="alert alert-success"><%= messages.success %></div>
  <% } %>
  
  <% if (messages.error) { %>
    <div class="alert alert-danger"><%= messages.error %></div>
  <% } %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center">Email Sending Form</h2>
        <form method="POST" action="/admin/mail">
          <div class="form-group">
            <label for="subject">Subject:</label>
            <input type="text" class="form-control" id="subject" name="subject" placeholder="Enter email subject" required>
          </div>
          <div class="form-group">
            <label for="message">Message:</label>
            <textarea class="form-control" id="message" name="message" placeholder="Enter email message" rows="5" required></textarea>
          </div>
          <button type="submit" class="btn btn-success">Send Email</button>
        </form>
      </div>
    </div>
  </div>



<%-include('../partials/adminfooter.ejs');%>
