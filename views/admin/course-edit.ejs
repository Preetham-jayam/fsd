<%-include("../partials/adminheader.ejs");%>


<div class="row col-md-12">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <div>
        <form method="POST" action="/admin/course/edit/<%=course.cid%>">
            <input type="hidden" name="id" value="<%=course.cid%>">
          <div>
            <div>Course name</div>
            <input value="<%=course.name%>" name="nameCourse" class="form-control" id="focusedInput" type="text">
          </div>
          <div>
            <div>Description</div>
            <input value="<%=course.description%>" name="Description" class="form-control" id="focusedInput" type="text">
          </div>
          <div>
            <div>Title</div>
            <input value="<%=course.title%>" name="title" class="form-control" id="focusedInput" type="text">
          </div>
          <div>
            <div>Price</div>
            <input value="<%=course.price%>" name="Price" class="form-control" id="focusedInput" type="text">
          </div>
          
      </div>
      <button type="submit" class="btn btn-outline-success">
        <i class="fa fa-check" aria-hidden="true"></i>
        Save
      </button>
      </form>
    </div>
  </div>
  <div class="col-md-3">
  </div>
  </div>

  <%-include('../partials/adminfooter.ejs');%>
